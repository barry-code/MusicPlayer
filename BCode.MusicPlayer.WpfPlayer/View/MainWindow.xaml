<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:BCode.MusicPlayer.WpfPlayer"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:infra="clr-namespace:BCode.MusicPlayer.WpfPlayer.Shared" 
    x:Class="BCode.MusicPlayer.WpfPlayer.View.MainWindow"    
    mc:Ignorable="d"         
    WindowStyle="None" 
    AllowsTransparency="True"   
    ResizeMode="{Binding ResizeMode}"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextElement.FontWeight="Medium"
    TextElement.FontSize="14"
    FontFamily="{materialDesign:MaterialDesignFont}"
    Background="Transparent"    
    Height="{Binding WindowHeight, Mode=TwoWay}" 
    Width="{Binding WindowWidth, Mode=TwoWay}"
    MinWidth="{Binding MinWidth}" 
    MinHeight="{Binding MinHeight}"     
    MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <infra:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <infra:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter"/>
    </Window.Resources>

    <Border CornerRadius="10" Background="{DynamicResource MaterialDesignPaper}">
        <materialDesign:DialogHost IsOpen="{Binding IsLoading}">
            <materialDesign:DialogHost.DialogContent>
                <materialDesign:Card MinWidth="250">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Loading Songs..." VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0" />
                        <ProgressBar Grid.Row="1" IsIndeterminate="True" Margin="10,0" />
                        <Button Grid.Row="2" Content="Cancel" Command="{Binding CancelLoadCmd}" VerticalAlignment="Center" Margin="10,0"/>
                    </Grid>
                </materialDesign:Card>                
            </materialDesign:DialogHost.DialogContent>
            
            <Grid Margin="15,5,15,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="1*" MinHeight="100" />
                    <RowDefinition Height="80" />
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Image Source="/Resources/headphone_music_icon_640x532.png" Height="30" Width="30" Margin="0,0,25,0" ToolTip="{Binding AppName}" />
                        <Button Name="btnSettings" Height="27" Margin="5,2" Style="{StaticResource MaterialDesignPaperButton}" Click="btnSettings_Click" ToolTip="Settings">
                            <materialDesign:PackIcon Kind="Cog" Height="20" Width="20"/>
                        </Button>
                        <Button Name="btnMinimalPlayer" Height="27" Margin="5,0" Style="{StaticResource MaterialDesignPaperButton}" Click="btnMinimalPlayer_Click" ToolTip="Minimal Player Mode">
                            <materialDesign:PackIcon Kind="ArrowExpandUp" Height="20" Width="20"/>
                        </Button>
                        <Button Name="btnExpandedPlayer" Height="27" Margin="5,0" Style="{StaticResource MaterialDesignPaperButton}" Click="btnExpandedPlayer_Click" ToolTip="Expanded Player Mode">
                            <materialDesign:PackIcon Kind="ArrowExpandDown" Height="20" Width="20"/>
                        </Button>                        
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Button Name="btnMinimize" Height="30" Margin="5,0" Style="{StaticResource MaterialDesignToolButton}" Click="btnMinimize_Click" ToolTip="Minimize Window">
                            <materialDesign:PackIcon Kind="WindowMinimize" Height="25" Width="25"/>
                        </Button>
                        <Button Name="btnMaximize" Height="30" Margin="5,0" Style="{StaticResource MaterialDesignToolButton}" Click="btnMaximize_Click" ToolTip="Maximize Window">
                            <materialDesign:PackIcon Kind="WindowMaximize" Height="25" Width="25"/>
                        </Button>
                        <Button Name="btnClose" Height="30" Margin="5,0" Style="{StaticResource MaterialDesignToolButton}" Click="btnClose_Click" ToolTip="Exit">
                            <materialDesign:PackIcon Kind="WindowClose" Height="25" Width="25"/>
                        </Button>
                    </StackPanel>
                </Grid>
                
                <Grid Grid.Row="1" Margin="5,5,5,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*" MinWidth="60" />
                        <ColumnDefinition Width="*" MinWidth="40" />
                        <ColumnDefinition Width="2*" MinWidth="80" />
                        <ColumnDefinition Width="*" MinWidth="40" />
                        <ColumnDefinition Width="1.5*" MinWidth="60" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" x:Name="prevBtn" Command="{Binding PrevCmd}" Height="Auto" Width="Auto" Margin="2,0" Padding="0,5" Style="{StaticResource MaterialDesignRaisedButton_Rounded}" materialDesign:ElevationAssist.Elevation="Dp8">
                        <materialDesign:PackIcon Kind="SkipPrevious" Height="Auto" Width="Auto" Margin="0" Padding="0"/>
                    </Button>

                    <Button Grid.Column="1" x:Name="skipBackBtn" Command="{Binding SkipBackCmd}" Height="Auto" Width="Auto" Margin="2,0" Padding="0,10" Style="{StaticResource MaterialDesignRaisedButton_Rounded}" materialDesign:ElevationAssist.Elevation="Dp8">
                        <materialDesign:PackIcon Kind="Rewind" Height="Auto" Width="Auto" Margin="0" Padding="0" />
                    </Button>

                    <Button Grid.Column="2" x:Name="playPauseBtn" Command="{Binding PlayPauseCmd}" Height="Auto" Width="Auto" Margin="2,0" Padding="0"  Style="{StaticResource MaterialDesignRaisedButton_Rounded}" materialDesign:ElevationAssist.Elevation="Dp8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Play" Height="Auto" Width="Auto" Margin="0" Padding="0" Visibility="{Binding Player.IsPlaying, Converter={StaticResource InvertedBooleanToVisibilityConverter}}" />
                            <materialDesign:PackIcon Kind="Pause" Height="Auto" Width="Auto" Margin="0" Padding="0" Visibility="{Binding Player.IsPlaying, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>                        
                    </Button>

                    <Button Grid.Column="3" x:Name="skipForwardBtn" Command="{Binding SkipAheadCmd}" Height="Auto" Width="Auto" Margin="2,0" Padding="0,10" Style="{StaticResource MaterialDesignRaisedButton_Rounded}" materialDesign:ElevationAssist.Elevation="Dp8">
                        <materialDesign:PackIcon Kind="FastForward" Height="Auto" Width="Auto" Margin="0" Padding="0" MinWidth="30"/>
                    </Button>

                    <Button Grid.Column="4" x:Name="nextBtn" Command="{Binding NextCmd}" Height="Auto" Width="Auto" Margin="2,0" Padding="0,5" Style="{StaticResource MaterialDesignRaisedButton_Rounded}" materialDesign:ElevationAssist.Elevation="Dp8">
                        <materialDesign:PackIcon Kind="SkipNext"  Height="Auto" Width="Auto" Margin="0" Padding="0"/>
                    </Button>
                </Grid>

                <Grid Grid.Row="2" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="25" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        
                        <Grid.ColumnDefinitions>                        
                            <ColumnDefinition Width="*" />                            
                            <ColumnDefinition Width="*" />                            
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" HorizontalAlignment="Right" Margin="10,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Track:" Foreground="{DynamicResource MaterialDesignBodySecondary}" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding Player.CurrentSong.Name}" MinWidth="40" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" TextAlignment="Right" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" />
                        </Grid>
                        <Grid Grid.Column="1" HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Artist:" Foreground="{DynamicResource MaterialDesignSecondaryBrush}" Margin="0,0,10,0" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" />
                            <TextBlock Grid.Column="1" Text="{Binding Player.CurrentSong.ArtistName}" MinWidth="40" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" TextAlignment="Center" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" />
                        </Grid>
                        <Grid Grid.Column="2" HorizontalAlignment="Left" Margin="10,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Album:" Foreground="{DynamicResource MaterialDesignSecondaryBrush}" Margin="0,0,10,0" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" />
                            <TextBlock Grid.Column="1" Text="{Binding Player.CurrentSong.AlbumName}" MinWidth="40" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" TextAlignment="Left" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" />
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1" VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="75"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Player.CurrentSongElapsedTime, StringFormat=hh\\:mm\\:ss}" HorizontalAlignment="Center" Margin="10,0"  />
                        <Slider Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,0" Value="{Binding CurrentSongTimeSeconds, Mode=TwoWay}" Minimum="0" Maximum="{Binding CurrentSongMaxTime}" Height="20" IsManipulationEnabled="False" IsMoveToPointEnabled="True"/>
                        <TextBlock Grid.Column="2" HorizontalAlignment="Center" Margin="10,0" Text="{Binding Player.CurrentSong.Duration, StringFormat=hh\\:mm\\:ss}"/>
                    </Grid>

                </Grid>

                <Grid Grid.Row="3" Margin="0,5" Visibility="{Binding ExpandedVisibility}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialDesign:Card Grid.Column="0" Margin="5" materialDesign:ElevationAssist.Elevation="Dp8">
                        <StackPanel Orientation="Vertical">
                            <Button Command="{Binding BrowseCmd}" Margin="5" Height="50" Style="{DynamicResource MaterialDesignRaisedButton_Rounded}" ToolTip="Browse" materialDesign:ElevationAssist.Elevation="Dp8">
                                <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Nas" HorizontalAlignment="Center" Margin="0,0,0,1" Height="25" Width="25" />
                                    <TextBlock Text="Browse"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding PlaylistCmd}" Margin="5" Height="50" Style="{DynamicResource MaterialDesignRaisedButton_Rounded}" ToolTip="Playlist" materialDesign:ElevationAssist.Elevation="Dp8">
                                <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="PlaylistMusic" HorizontalAlignment="Center" Margin="0,0,0,1" Height="25" Width="25" />
                                    <TextBlock Text="Playlist"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="1" Margin="5" materialDesign:ElevationAssist.Elevation="Dp2" Visibility="{Binding IsBrowseScreen, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" VerticalAlignment="Top" Height="30" Width="30" Padding="0" Margin="5" ToolTip="Go to Root Folder" Click="btnFolderBrowseGoHome" Style="{StaticResource MaterialDesignRaisedButton}">
                                    <materialDesign:PackIcon Kind="Home" Height="25" Width="25" />
                                </Button>
                                <Button Grid.Column="1" VerticalAlignment="Top" Height="30" Width="30" Padding="0" Margin="5" ToolTip="Go Back Up Folder Level" Click="btnFolderBrowseGoUpLevel" Style="{StaticResource MaterialDesignRaisedButton}">
                                    <materialDesign:PackIcon Kind="FolderArrowLeft" Height="25" Width="25"/>
                                </Button>
                                <Button Grid.Column="2" VerticalAlignment="Top" Height="30" Width="30" Padding="0" Margin="5" ToolTip="Go to Current Song Folder" Click="btnCurrentSongFolder" Style="{StaticResource MaterialDesignRaisedButton }">
                                    <materialDesign:PackIcon Kind="LocationOn" Height="25" Width="25"/>
                                </Button>
                                <TextBlock Grid.Column="3" 
                                           VerticalAlignment="Center" 
                                           Text="{Binding FileExplorer.CurrentPath}" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           TextTrimming="CharacterEllipsis" 
                                           TextWrapping="NoWrap" 
                                           Margin="0,0,5,0"/>                                
                            </Grid>

                            <Image Grid.Row="1"
                               Source="{Binding FileExplorer.BackgroundImage}" 
                               Stretch="Uniform" 
                               Opacity="0.2"
                               IsHitTestVisible="False" />

                            <Grid Grid.Row="1"
                                  Panel.ZIndex="10"
                                  Visibility="{Binding FileExplorer.IsLoading,
                                Converter={StaticResource BooleanToVisibilityConverter}}">

                                <Border Background="#80000000"/>                               

                                <ProgressBar
                                    Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    Width="100"
                                    Height="100"
                                    IsIndeterminate="True"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                            </Grid>

                            <DataGrid Grid.Row="1" 
                                      x:Name="browseItemGrid" 
                                      ItemsSource="{Binding FileExplorer.CurrentContent}" 
                                      CanUserAddRows="False" 
                                      CanUserDeleteRows="False" 
                                      AutoGenerateColumns="False" 
                                      SelectionMode="Single" 
                                      SelectionUnit="FullRow" 
                                      Margin="5" 
                                      Background="Transparent" 
                                      MouseDoubleClick="browseItemGrid_MouseDoubleClick"
                                      IsReadOnly="True"                                       
                                      SelectedItem="{Binding FileExplorer.SelectedItem}">

                                <DataGrid.Resources>
                                    <ContextMenu x:Key="PlaylistRowContextMenu">
                                        <MenuItem Header="Add to Playlist" 
                                                  Click="AddBrowseItemToPlaylist_Click" 
                                                  DataContext="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                    </ContextMenu>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.Header>
                                            <TextBlock Text="Name" />
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="{Binding IconType}" Margin="2,0,5,0" Foreground="#FF673AB7" />
                                                    <TextBlock Text="{Binding Name}" ContextMenu="{StaticResource PlaylistRowContextMenu}"/> 
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.Header>
                                            <TextBlock Text="Duration" />
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Duration}" ContextMenu="{StaticResource PlaylistRowContextMenu}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.Header>
                                            <TextBlock Text="Artist" />
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Artist}" ContextMenu="{StaticResource PlaylistRowContextMenu}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>         
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="1" Margin="5" materialDesign:ElevationAssist.Elevation="Dp8" Visibility="{Binding IsBrowseScreen, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button VerticalAlignment="Top" Height="30" Width="30" Padding="0" Margin="5" ToolTip="Add File(s) to Playlist" Command="{Binding AddFilesCmd}" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ElevationAssist.Elevation="Dp8">
                                    <materialDesign:PackIcon Kind="FilePlus" Height="25" Width="25" />
                                </Button>
                                <Button VerticalAlignment="Top"  Height="30" Width="30" Padding="0" Margin="5" ToolTip="Add Folder to Playlist" Command="{Binding AddFolderCmd}" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ElevationAssist.Elevation="Dp8">
                                    <materialDesign:PackIcon Kind="FolderPlus" Height="25" Width="25" />
                                </Button>
                                <Button VerticalAlignment="Top"  Height="30" Width="30" Padding="0" Margin="5" ToolTip="Clear Playlist" Command="{Binding ClearPlayListCmd}" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ElevationAssist.Elevation="Dp8">
                                    <materialDesign:PackIcon Kind="CloseCircle" Height="25" Width="25" />
                                </Button>
                            </StackPanel>

                            <DataGrid Grid.Row="1" x:Name="playlistGrid" ItemsSource="{Binding Player.PlayList}" SelectedItem="{Binding Player.CurrentSong, Mode=OneWay}" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False" SelectionMode="Single" CanUserSortColumns="True" CanUserResizeColumns="True" SelectionUnit="FullRow" Margin="5" Background="Transparent">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="#" Binding="{Binding Order}" IsReadOnly="True" />
                                    <DataGridTextColumn Header="Song" Binding="{Binding Name}" IsReadOnly="True" />
                                    <DataGridTextColumn Header="Artist" Binding="{Binding ArtistName}" IsReadOnly="True" />
                                    <DataGridTextColumn Header="Album" Binding="{Binding AlbumName}" IsReadOnly="True" />
                                    <DataGridTextColumn Header="Year" Binding="{Binding Year}" IsReadOnly="True" />
                                    <DataGridTemplateColumn IsReadOnly="True">
                                        <DataGridTemplateColumn.Header>
                                            <TextBlock Text="Duration"/>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Duration, StringFormat=mm\\:ss}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Path" Binding="{Binding Path}" IsReadOnly="True" />
                                </DataGrid.Columns>
                                <DataGrid.InputBindings>
                                    <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding PlaySongFromPlayListCmd}" CommandParameter="{Binding ElementName=playlistGrid, Path=SelectedIndex}"/>
                                </DataGrid.InputBindings>
                            </DataGrid>
                        </Grid>
                        
                    </materialDesign:Card>
                </Grid>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:Card Grid.Column="0" 
                                         Margin="5" 
                                         Visibility="{Binding ShowNotificationAlert, Converter={StaticResource InvertedBooleanToVisibilityConverter}}" 
                                         materialDesign:ElevationAssist.Elevation="Dp8">
                        <materialDesign:Snackbar HorizontalAlignment="Stretch" 
                                                 Foreground="{DynamicResource MaterialDesignSecondaryBrush}" 
                                                 Background="{DynamicResource MaterialDesignCardBackground}" 
                                                 VerticalAlignment="Center" 
                                                 IsActive="True" 
                                                 Margin="10,0" >
                            <materialDesign:SnackbarMessage>
                                <TextBlock Text="{Binding CurrentStatusMessage}" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Style="{StaticResource MaterialDesignBody2TextBlock}" />
                            </materialDesign:SnackbarMessage>
                        </materialDesign:Snackbar>
                    </materialDesign:Card>
                    <materialDesign:Card Grid.Column="0" 
                                         Margin="5" 
                                         Visibility="{Binding ShowNotificationAlert, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <materialDesign:Snackbar x:Name="snackBarMessages" 
                                                 MessageQueue="{Binding NotificationMessageQueue}" 
                                                 HorizontalAlignment="Stretch" 
                                                 Foreground="{DynamicResource MaterialDesignSecondaryBrush}" 
                                                 Background="{DynamicResource MaterialDesignCardBackground}" 
                                                 VerticalAlignment="Center" 
                                                 IsActiveChanged="snackBarMessages_IsActiveChanged" 
                                                 Margin="10,0" >
                            <materialDesign:Snackbar.Resources>
                                <Style TargetType="{x:Type materialDesign:SnackbarMessage}">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" 
                                                           TextTrimming="CharacterEllipsis" 
                                                           TextWrapping="NoWrap" />
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </materialDesign:Snackbar.Resources>
                        </materialDesign:Snackbar>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="1" Margin="5" materialDesign:ElevationAssist.Elevation="Dp8">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0,0,0">
                            <Button Width="40" Visibility="{Binding Player.IsMuted, Converter={StaticResource InvertedBooleanToVisibilityConverter}}" Background="Transparent" Padding="0" BorderThickness="0" Command="{Binding MuteCmd}" >
                                <materialDesign:PackIcon Kind="VolumeHigh" Height="30" Width="30" VerticalAlignment="Center" />
                            </Button>
                            <Button Width="40" Visibility="{Binding Player.IsMuted, Converter={StaticResource BooleanToVisibilityConverter}}" Background="Transparent" Padding="0" BorderThickness="0" Command="{Binding UnMuteCmd}" >
                                <materialDesign:PackIcon Kind="VolumeOff" Height="30" Width="30" VerticalAlignment="Center" />
                            </Button>                            
                            <Slider Value="{Binding Player.CurrentVolume}" Width="170" VerticalAlignment="Center" Minimum="0" Maximum="100" Margin="5,0" />
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>

            </Grid>
        </materialDesign:DialogHost>        
    </Border>

</Window>
