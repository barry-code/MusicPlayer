<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style TargetType="materialDesign:Card">
        <Setter Property="UniformCornerRadius" Value="10"/>
    </Style>

    <Style x:Key="MaterialDesignRaisedButton_Rounded" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="5"/>
    </Style>

</ResourceDictionary>